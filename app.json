{
  "name": "multi-bot-force-start",
  "description": "Force users to start multiple bots before getting access.",
  "repository": "https://github.com/STD-DEEPANSHU/force",
  "keywords": ["telegram", "bot", "pyrogram"],
  "env": {
    "API_ID": {
      "description": "Telegram API ID from my.telegram.org",
      "required": true
    },
    "API_HASH": {
      "description": "Telegram API Hash from my.telegram.org",
      "required": true
    },
    "BOT_TOKEN": {
      "description": "Your main bot token",
      "required": true
    },
    "REQUIRED_BOTS": {
      "description": "Space-separated list of bot usernames, e.g. @bot1 @bot2",
      "required": true
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  },
  "scripts": {
    "postdeploy": "echo App deployed"
  }
}
